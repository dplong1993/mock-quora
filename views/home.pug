extends layout.pug

include include/nav-bar.pug
include include/answers-list.pug
include include/topics-list.pug

append head
  script(src="/public/js/home.js" type="module" defer)
  script(src="/public/js/logout.js" type="module" defer)
  script(src="/public/js/nav-btns.js" type="module" defer)
  link(rel="stylesheet" href="/public/css/home.css")
  link(rel="stylesheet" href="/public/css/nav-bar.css")


block content
  +navBar()
  main.q-box
    div.q-box
      div.q-text.qu-display--flex.qu-px--large.qu-pb--large.qu-flexDirection--row.qu-fontSize--regular 
        div.q-box
          +answersList()
          +topicsList()
  div.log-out-btn-container
    div.log-out Log-out