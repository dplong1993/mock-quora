extends layout.pug

include include/auth-input.pug

append head
  script(src="/public/js/signup.js" type="module" defer)

block content
  form#signup-form
    h1 Sign Up For Queryou
    ul#errors-container
    +authInput("Email", "email")
      input(type="email" name="email" required)
    +authInput("Username", "username")
      input(type="text" name="username" required)
    +authInput("First Name", "firstName")
      input(type="text" name="firstName" required)
    +authInput("Last Name", "lastName")
      input(type="text" name="lastName" required)
    +authInput("Description", "description")
      textarea(name="description")
    +authInput("Password", "password")
      input(type="password" name="password" required)
    +authInput("Confirm Password", "password2")
      input(type="password" name="password2" required)
    button(type="submit") Sign in
